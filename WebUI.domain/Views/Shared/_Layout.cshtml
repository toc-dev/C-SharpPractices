<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KaToChi BANK</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/Global.css" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/images/Free_Sample_By_Wix (1).jpg" />
        </a>
        <div class="container-fluid">
            <nav class="navbar navbar-inverse">

                <div class="container-fluid">

                    <ul class="nav navbar-nav">
                        <li><a id="len1" class="nav-link hoverable" asp-controller="Home" asp-action="Index">Home </a></li>

                        @if (signInManager.IsSignedIn(User))
                        {
                            <li>
                                <a class="nav-link hoverable" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
                            </li>
                            <li>
                                <a class="nav-link hoverable" asp-controller="Admin" asp-action="RegisterCustomer">Register new Customer</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link py-0 hoverable" style="width:auto">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link hoverable" asp-area="" asp-controller="Account" asp-action="LogIn">LogIn</a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>

        </div>        
    </header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div style="color: white;" class="container">
            &copy; 2021 - Bank KaToChi
        </div>
    </footer>
    
    
</body>
</html>

