@{ var roles = roleManager.Roles;}

<main>
    <div>
        <center>
            <h1 class="btn-danger">
                @ViewBag.ErrorMessage
            </h1>
        </center>
        <h1>Existing Roles</h1>
        <div>
            @foreach (var role in roles)
            {
                <span>@role.Name</span>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@role.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true)">Delete</a>
                    </span>
                </form>
            }
        </div>
    </div>
    <div>
        <div>
            <p>
                <a asp-controller="Admin" asp-action="CreateRole">Create Role</a>
            </p>
        </div>
        <div>
            <p>
                <a asp-controller="Admin" asp-action="UpdateRole">Update Role</a>
            </p>
        </div>

        @* wAtch out for the ability of super ADmin to delete self*@
    </div>


</main>
@section scripts{
    <script>
        function confirmDelete(uniqueId, isTrue) {

            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isTrue) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
    <script src="~/js/jquery-3.3.1.min.js">
    </script>
}