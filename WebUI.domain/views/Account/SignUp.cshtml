@model WebUI.domain.Model.SignUpViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Account</h5>
    <form asp-action="SignUp" method="post" class="m-2">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Gender</label>
            <select asp-for="Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="PreferNotToSay">Prefer not to say</option>
            </select>
        </div>
        <div class="form-group">
            <label>Birthday</label>
            <input type="date" asp-for="Birthday" class="form-control" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label>Username</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Street Number</label>
            <input asp-for="PlotNo" class="form-control" />
        </div>
        <div class="form-group">
            <label>Street</label>
            <input asp-for="StreetName" class="form-control" />
        </div>
        <div class="form-group">
            <label>City</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label>State</label>
            <input asp-for="State" class="form-control" />
        </div>
        <div class="form-group">
            <label>Country</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</body>
</html>