@model WebUI.domain.Models.LoginViewModel;

@{ ViewData["Title"] = "LogIn"; }

@section styleLinks{
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/loginStyle.css">
}

<main>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">
                        Welcome <br /> Sign in
                    </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center" style="font-size:smaller; color:aliceblue;"> <em> Bank KaTochi <br /> ...your money may be safe with us! </em></h3>
                        <form asp-action="LogIn" method="post" autocomplete="on" class="signin-form">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <input class="form-control" type="text" asp-for="Email" placeholder="Email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="password-field" class="form-control" asp-for="Password" type="password" placeholder="Password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button> @*change bg-color*@
                            </div>

                            <div class="form-group">
                                <div class="w-50">
                                    <label>Remember me</label>
                                    <input style="background-color: red;" asp-for="RememberMe" type="checkbox" />
                                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                                </div>
                                @*
                                    <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Forgot Password</a>
                                    </div>
                                *@
                            </div>
                        </form>
                        @*<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/Login.js"></script>

</main>