@model WebUI.domain.Model.LogInViewModel;

@{ ViewData["Title"] = "LogIn"; }

<div class="container bg-light">
    <div class="row">
        <div class="col">
            <div>
                <h1>
                    Welcome <br /> SignIn to your Account
                </h1>
                <div>
                    <form asp-action="LogIn" method="post" autocomplete="on">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group col-xl-4">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-xl-4 col-lg-offset-4">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-xl-4 col-lg-offset-4">
                            <label >Remember me</label>
                            <input asp-for="RememberMe" type="checkbox" class="form-control" />
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary text-center">SUBMIT</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col">
            <img src="~/images/51-510624_fintech-png-transparent-png.png" width="100" />
        </div>
    </div>
</div>

